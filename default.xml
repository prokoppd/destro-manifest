<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Default revision for all repos -->
  <default revision="main" remote="origin" sync-j="4" />

  <!-- Define remote repository URL -->
  <remote name="origin" fetch="https://github.com/prokoppd/meta-destro.git" />
  <remote name="raspberrypi" fetch="https://git.yoctoproject.org/meta-raspberrypi/" />

  <!-- Yocto upstream layer -->
  <project name="poky" path="poky" revision="scarthgap" />

  <!-- Your custom layers -->
  <project name="meta-destro" path="meta-destro" revision="main" />
  <project name="meta-raspberrypi" path="meta-raspberrypi" revision="scarthgap" remote="raspberrypi"/>

  <!-- Optional scripts -->
  <!-- <project name="yocto-scripts" path="scripts" revision="main" /> -->
</manifest>

